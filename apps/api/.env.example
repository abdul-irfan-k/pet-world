# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=

# JWT Secrets - Generate with: openssl rand -base64 32
JWT_ACCESS_TOKEN_SECRET=
JWT_REFRESH_TOKEN_SECRET=

# JWT Expiry
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=30d

# Password Hashing
SALT_ROUNDS=10

# CORS - (example: https://example.com,https://staging.example.com)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=info

# Cloudinary - Optional, for image/video uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Gmail for Nodemailer - Optional, for sending emails
# Ensure you use an "App Password" if 2FA is enabled on your Gmail account.
GMAIL_USER=
GMAIL_APP_PASSWORD=

# Stripe - Optional, for payments
STRIPE_SECRET_KEY=

# Google OAuth for Google authentication
GOOGLE_CLIENT_ID=